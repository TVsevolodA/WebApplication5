<style>
    #Result {
        width: 128px;
        height: 32px;
        text-align:right;
    }
</style>

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <input id="Result" type="text" value="@ViewData["Result"]" name="str" />
    @Html.Partial("Calculator");
}

<script>
    function getValue(elem) {
        if (elem.value == "⌫") document.getElementById("Result").value = document.getElementById("Result").value.slice(0, -1);
        else document.getElementById("Result").value = document.getElementById("Result").value + elem.value;
    }

    function clearField() {
        document.getElementById("Result").value = "";
    }
</script>